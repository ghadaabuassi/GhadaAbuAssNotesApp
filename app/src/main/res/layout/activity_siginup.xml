<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".SiginupActivity">

    <EditText
        android:id="@+id/edt_emial_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:ems="13"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress"
        android:hint="Email"
        />
    <EditText
        android:id="@+id/edt_password_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:hint="password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        />



    <Button
        android:id="@+id/but_siginup_user"
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:onClick="but_siginup_user"
        android:textColor="@color/orange"
        android:background="@color/white"
        android:layout_marginTop="40dp"
        android:text="SiginUp"
        />
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/tv_have_account"
        android:layout_marginTop="50dp"
        android:onClick="tv_dont_have_account"
        android:textColor="@color/white"
        android:text="I have account !"
        android:layout_height="wrap_content" />
</LinearLayout>