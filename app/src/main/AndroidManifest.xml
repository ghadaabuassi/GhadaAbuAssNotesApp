<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.notesapp.ghadacoder2015">

    <application
        android:name=".util.AppControl"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".NotesActivity"
            android:label="@string/notes"
            ></activity>
        <activity android:name=".NewCategoriesActivity"
            android:label="@string/new_category"
            />
        <activity android:name=".SiginupActivity" />
        <activity android:name=".SigininActivity" />
        <activity android:name=".SplachActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewNoteActivity"
            android:label="@string/new_note" />
    </application>

</manifest>